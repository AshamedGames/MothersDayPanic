            <kind>1</kind>
            <string>/// Create Burger Variables

event_inherited();

image_speed = 0;
image_index = 0;
item_name = "burger";
item_type = "food";
place_cooked = "grill";
burger_temp = "raw";
flippable = true;
draggable = true;
side = "a";
a_index = 0;

cook_start = 0;

side_a_cooked = 0;
side_a_cooked_old = 0;
a_temp = "raw";
side_b_cooked = 0;
side_b_cooked_old = 0;
b_temp = "raw";
