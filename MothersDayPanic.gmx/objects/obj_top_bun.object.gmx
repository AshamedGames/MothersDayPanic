if(cooking) {//you will have to come up with a fix for if the hour changes while cooking
    time_cooked = obj_clock.cur_min - cook_start;
    
    if(time_cooked &lt; 3){
      temp = 'raw';
      image_index = 0;
    } else if(time_cooked &lt; 6){
      temp = 'good';
      image_index = 1;
    } else if(time_cooked &lt; 9){
      temp = 'over';
      image_index = 2;
    } else {
      temp = 'burnt';
      image_index = 3;
